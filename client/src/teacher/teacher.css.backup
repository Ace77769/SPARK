.teacher-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 20px;
  background: #f8f9fa;
  border-bottom: 1px solid #ddd;
}

.teacher-nav .brand {
  font-weight: bold;
}

.teacher-nav .links a {
  margin-left: 15px;
  text-decoration: none;
  color: #007bff;
  transition: color 0.2s ease;
}

.teacher-nav .links a:hover {
  color: #0056b3;
  text-decoration: underline;
}

.teacher-dashboard {
  padding: 30px 20px;
  text-align: center;
  max-width: 1400px;
  margin: 0 auto;
}

.teacher-dashboard h1 {
  font-family: 'Comic Sans MS', Arial, sans-serif;
  font-size: 3rem;
  font-weight: 900;
  color: #FF6347;
  text-shadow: 3px 3px 6px rgba(0,0,0,0.2);
  margin-bottom: 30px;
}

.teacher-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 25px;
  margin-top: 20px;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}

.card {
  background: #fff;
  padding: 30px 20px;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  text-decoration: none;
  color: #2C3E50;
  transition: all 0.3s ease;
  border: 5px solid;
  position: relative;
  overflow: hidden;
}

.card h3 {
  font-family: 'Comic Sans MS', Arial, sans-serif;
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 10px;
}

.card p {
  font-family: 'Comic Sans MS', Arial, sans-serif;
  font-size: 1rem;
  line-height: 1.5;
}

.card:hover {
  transform: translateY(-10px) scale(1.05);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
}

.video-card-dashboard {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53) !important;
  border-color: #FF6B6B !important;
  color: white !important;
}

.quiz-card-dashboard {
  background: linear-gradient(135deg, #4ECDC4, #44A3A0) !important;
  border-color: #4ECDC4 !important;
  color: white !important;
}

.quiz-manage-card {
  background: linear-gradient(135deg, #95E1D3, #38B2AC) !important;
  border-color: #95E1D3 !important;
  color: white !important;
}

.card:nth-child(1) {
  border-color: #FFD700;
  background: linear-gradient(135deg, #FFEAA7, #FDCB6E);
}

.card:nth-child(5) {
  border-color: #DDA0DD;
  background: linear-gradient(135deg, #FAD0F1, #E1BEE7);
}

.teacher-form {
  max-width: 500px;
  margin: 30px auto;
  padding: 20px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.teacher-form input,
.teacher-form textarea,
.teacher-form select {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 8px;
}

.primary {
  background: #007bff;
  color: white;
  border: none;
  padding: 10px;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s ease;
}

.primary:hover {
  background: #0056b3;
}

.manage-container {
  max-width: 1000px;
  margin: 40px auto;
  padding: 30px;
  background: #111827;
  border-radius: 16px;
  color: white;
  box-shadow: 0 10px 30px rgba(0,0,0,0.4);
}

.manage-container h2 {
  text-align: center;
  margin-bottom: 30px;
  color: #60a5fa;
  font-size: 28px;
}

/* Filter buttons */
.filter-buttons {
  display: flex;
  gap: 10px;
  margin-bottom: 30px;
  flex-wrap: wrap;
  justify-content: center;
}

.filter-buttons button {
  padding: 10px 20px;
  border: 2px solid #374151;
  background: #1f2937;
  color: #d1d5db;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
}

.filter-buttons button:hover {
  border-color: #3b82f6;
  color: #60a5fa;
}

.filter-buttons button.active {
  background: #3b82f6;
  border-color: #3b82f6;
  color: white;
}

.materials-list {
  margin-top: 20px;
}

.material-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #1f2937;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 15px;
  border: 1px solid #374151;
  transition: all 0.3s ease;
}

.material-item:hover {
  background: #374151;
  border-color: #3b82f6;
}

.video-item {
  border-left: 4px solid #3b82f6;
}

.material-info {
  flex: 1;
  margin-right: 20px;
}

.material-header {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
  flex-wrap: wrap;
}

.category-badge,
.video-type-badge {
  padding: 4px 12px;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
}

.category-badge {
  background: #374151;
  color: #d1d5db;
}

.video-type-badge {
  background: #3b82f6;
  color: white;
}

.material-title {
  margin: 0 0 10px 0;
  font-size: 18px;
  font-weight: 600;
  color: #f9fafb;
  line-height: 1.4;
}

.material-meta {
  display: flex;
  gap: 8px;
  align-items: center;
  font-size: 14px;
  color: #9ca3af;
  flex-wrap: wrap;
}

.description-preview {
  font-style: italic;
  max-width: 300px;
}

.video-thumbnail-small {
  margin-top: 10px;
}

.thumbnail-preview {
  width: 80px;
  height: 60px;
  object-fit: cover;
  border-radius: 6px;
  border: 1px solid #374151;
}

.actions {
  display: flex;
  gap: 10px;
  align-items: center;
  flex-wrap: wrap;
}

.view-btn,
.download-btn {
  padding: 8px 16px;
  border-radius: 6px;
  text-decoration: none;
  color: white;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 5px;
}

.view-btn {
  background: #10b981;
}

.view-btn:hover {
  background: #059669;
  transform: translateY(-2px);
}

.download-btn {
  background: #3b82f6;
}

.download-btn:hover {
  background: #1e40af;
  transform: translateY(-2px);
}

.delete-btn {
  background: #ef4444;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  color: white;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 5px;
}

.delete-btn:hover {
  background: #dc2626;
  transform: translateY(-2px);
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .teacher-nav {
    flex-direction: column;
    gap: 10px;
  }
  
  .teacher-nav .links a {
    margin: 0 10px;
  }
  
  .teacher-cards {
    flex-direction: column;
    align-items: center;
  }
  
  .card {
    width: 100%;
    max-width: 300px;
  }
  
  .manage-container {
    margin: 20px;
    padding: 20px;
  }
  
  .material-item {
    flex-direction: column;
    gap: 15px;
  }
  
  .material-info {
    margin-right: 0;
  }
  
  .actions {
    justify-content: center;
  }
  
  .filter-buttons {
    justify-content: flex-start;
  }
}