.upload-container {
  max-width: 450px;
  margin: 50px auto;
  padding: 20px;
  background: #111827;
  color: white;
  border-radius: 12px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
}

.upload-container h2 {
  text-align: center;
  margin-bottom: 20px;
  color: #60a5fa;
}

.upload-form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.upload-form input,
.upload-form select {
  padding: 10px;
  border-radius: 6px;
  border: none;
  background: #1f2937;
  color: white;
}

.upload-form input[type="file"] {
  background: none;
}

.upload-form button {
  background: #2563eb;
  border: none;
  padding: 12px;
  border-radius: 8px;
  color: white;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.3s;
}

.upload-form button:hover {
  background: #1e40af;
}

.upload-msg {
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .upload-container {
    margin: 30px 20px;
    padding: 20px 15px;
  }

  .upload-container h2 {
    font-size: 22px;
    margin-bottom: 20px;
  }

  .upload-form {
    gap: 12px;
  }

  .upload-form input,
  .upload-form select {
    padding: 12px;
    font-size: 15px;
  }

  .upload-form button {
    padding: 14px;
    font-size: 16px;
  }
}

@media (max-width: 480px) {
  .upload-container {
    margin: 20px 10px;
    padding: 15px 12px;
  }

  .upload-container h2 {
    font-size: 20px;
  }

  .upload-form input,
  .upload-form select {
    padding: 10px;
    font-size: 14px;
  }

  .upload-msg {
    font-size: 13px;
  }
}
